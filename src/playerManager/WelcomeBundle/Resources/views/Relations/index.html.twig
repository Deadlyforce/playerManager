{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Relations list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Rencontre</th>
                <th>Rencontredate</th>
                <th>Rencontrecount</th>
                <th>Numero</th>
                <th>Kc</th>
                <th>Fc</th>
                <th>Reltype</th>
                <th>Distance</th>
                <th>Flake</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('relations_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.statut }}</td>
                <td>{{ entity.rencontre }}</td>
                <td>{% if entity.rencontreDate %}{{ entity.rencontreDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.rencontreCount }}</td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.kc }}</td>
                <td>{{ entity.fc }}</td>
                <td>{{ entity.relType }}</td>
                <td>{{ entity.distance }}</td>
                <td>{{ entity.flake }}</td>
                <td>{{ entity.commentaire }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('relations_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('relations_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('relations_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

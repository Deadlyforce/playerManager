{% extends '::base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    {% for photo in photos %}
        <div class="photo-block">
            <div class="photo-frame">
                <img src="{{ asset(photo.path) }}" alt="Photo">
            </div>
            <div>
                <a href="{{ path('photo_edit', {'id': photo.id}) }}" title="Edit photo">Edit</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}
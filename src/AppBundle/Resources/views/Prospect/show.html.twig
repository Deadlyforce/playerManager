{% extends '::base.html.twig' %}

{% block title %}{{ prospect.prenom }}{% endblock %}

{% block body -%}
    <h3>Fiche contact</h3>
    
    <div class="panel panel-default">
        <div class="panel-heading">{{ prospect.prenom }}</div>
        <div class="panel-body">            
            <img class="img-responsive prospect_photo" src="{{ asset(prospect.photoPrincipale) }}" alt="{{ prospect.photoPrincipale }}" />
            
            <table class="record_properties">
                <tbody>                    
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ prospect.pseudo }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ prospect.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ prospect.nom }}</td>
                    </tr>
                    <tr>
                        <th>Age</th>
                        <td>{{ prospect.age }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ prospect.ville }}</td>
                    </tr>
                    <tr>
                        <th>Arrondissement</th>
                        <td>{{ prospect.arrondissement }}</td>
                    </tr>
                    <tr>
                        <th>Pays</th>
                        <td>{{ prospect.pays }}</td>
                    </tr>
                    <tr>
                        <th>Numéro</th>
                        <td>{{ prospect.numero }}</td>
                    </tr>
                    <tr>
                        <th>Numéro étranger</th>
                        <td>{{ prospect.numeroEtranger }}</td>
                    </tr>
                    <tr>
                        <th>Source</th>
                        <td>{{ prospect.source }}</td>
                    </tr>
                    <tr>
                        <th>Date de création</th>
                        <td>{{ prospect.dateCreation|date('d-m-Y') }}</td>
                    </tr>
                </tbody>
            </table>  

            <a class="btn btn-default" href="{{ path('prospect_edit', { 'id': prospect.id }) }}">Edit</a><br/>
            {{ form(delete_form) }}
        </div>
        <div class="panel-footer">
            {% if prospect.relation %}
                <a href="{{ path('relation_show', { 'id': prospect.relation.id }) }}" title="Détails">Détails de la relation</a><br/>
            {% endif %}
            <a href="{{ path('rencontre_new', { 'prospect_id': prospect.id }) }}" title="Nouvelle rencontre">Ajouter une rencontre</a>
        </div>
    </div>

    

{% endblock %}

<!DOCTYPE html>
<html>
    
<head>
    <meta charset="UTF-8" />
    {#<title>{% block title %}Welcome!{% endblock %}</title>#}        
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite' 
            '%kernel.root_dir%/../vendor/twbs/bootstrap/dist/css/bootstrap.css'
            '%kernel.root_dir%/../vendor/twbs/bootstrap/dist/css/bootstrap-theme.css'
            '%kernel.root_dir%/../vendor/components/jqueryui/themes/base/jquery-ui.min.css'
            'bundles/app/packages/Timepicker-addon/jquery-ui-timepicker-addon.css'
            'bundles/app/packages/Craftpip-jquery-confirm-1.7.9/jquery-confirm.css'
            'bundles/app/packages/DataTables-1.10.8/datatables.min.css'
            'bundles/app/packages/font-awesome-4.4.0/css/font-awesome.min.css'
            'bundles/app/packages/Jcrop/css/jquery.Jcrop.min.css'
            'bundles/app/css/custom.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block javascripts %}
        {% javascripts
            '%kernel.root_dir%/../vendor/components/jquery/jquery.js'
            '%kernel.root_dir%/../vendor/components/jqueryui/jquery-ui.min.js'
            'bundles/app/packages/moment-with-locales.js'
            'bundles/app/packages/Timepicker-addon/jquery-ui-timepicker-addon.js'
            '%kernel.root_dir%/../vendor/twbs/bootstrap/dist/js/bootstrap.js'
            'bundles/app/packages/Craftpip-jquery-confirm-1.7.9/jquery-confirm.js'
            'bundles/app/packages/DataTables-1.10.8/datatables.min.js'
            'bundles/app/packages/Jcrop/js/jquery.Jcrop.min.js'
            'bundles/app/js/helpers.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</head>
<body>
    <section id="top-bar">
        <div class="container">
            
        </div>
    </section>
    <header>
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header col-md-4">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#" title="Brand">Brand</a>
                    </div>

                    <div class="collapse navbar-collapse col-md-8 pull-right" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('relation') }}">Relations</a></li>            
                            <li><a href="{{ path('prospect') }}">Prospects</a></li>            
                            <li><a href="{{ path('echange') }}">Chats</a></li>            
                            <li><a href="{{ path('fos_user_profile_show') }}">Profile</a></li>            
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>            
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
                        
    <div class="container">                   
        {% block body %}            
        {% endblock %}
        
        <footer>
        </footer>
    </div>
        
    <script type="text/javascript">
        $(document).ready(function(){
            
            
            
            $(".datatable").DataTable(); // class datatable
            
            getDatepicker();
            getDatetimepicker();
            
            
        });
    </script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
</body>

</html>

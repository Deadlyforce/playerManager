    <script type="text/javascript">       
        
        
        $(document).ready(function(){
             
            var loginImage1 = "{{ asset('bundles/app/images/base/manager_11b.jpg') }}"; 
            var loginImage2 = "{{ asset('bundles/app/images/base/manager_13.jpg') }}"; 
            var loginImage3 = "{{ asset('bundles/app/images/base/manager_14.jpg') }}";
            var loginImage4 = "{{ asset('bundles/app/images/base/manager_36b.jpg') }}";
            var loginImage5 = "{{ asset('bundles/app/images/base/manager_42.jpg') }}";
            var loginImage6 = "{{ asset('bundles/app/images/base/manager_35.jpg') }}";
            
            $.backstretch([loginImage1, loginImage2, loginImage3, loginImage4, loginImage5, loginImage6], {duration: 6000, fade: 3000});
            
            // Active link in menu *********************************************
            // Page name must match EXACTLY with menu link name !!
            var currentTitle = $(document).attr('title');            

            $(".nav").find("li").each(function(index, element){
                if ($(element).find("a").html() === currentTitle ) {    
                    $(element).addClass("active");
                }
            });
            
            $(".navbar-nav").on("click", "li", function () {
                var activeLi = $(".nav").find(".active");
                $(activeLi).removeClass("active");
            });        
            // Active link in menu *********************************************
            
            $(".datatable").DataTable(); // class datatable
            
            getDatepicker();
            getDatetimepicker();
           
            
        });
    </script>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ 'app.login.title'|trans }}{% endblock %}</title>        
    {% block stylesheets %}
        {% stylesheets filter='cssrewrite' 
            'bundles/app/packages/bootstrap-3.3.6/css/bootstrap.min.css'
            'bundles/app/packages/bootstrap-3.3.6/css/bootstrap-theme.min.css'             
            'bundles/app/css/custom.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block javascripts %}
        {% javascripts
            '%kernel.root_dir%/../vendor/components/jquery/jquery.js'  
            'bundles/app/packages/bootstrap-3.3.6/js/bootstrap.min.js'                                
            'bundles/app/packages/jquery.backstretch.min.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</head>
<body>
    <section id="login-top-bar">        
        <div class="container">  
            <div class="row">
                <div class="col-md-1">
                    <ul class="lang-menu">
                        <li><a href="{{ path('change_locale', {'_locale': 'fr'} ) }}">Fr</a></li>
                        <li><a href="{{ path('change_locale', {'_locale': 'en'} ) }}">En</a></li>
                    </ul>
                </div>
                <div class="col-md-11">
                    {{ block('fos_user_content') }}
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        {% block content %}   
            <div id="login-body">
                <div id="login-title">
                    <img src="{{ asset('bundles/app/images/logo-256.png') }}" alt="Mnaomai-logo"/>
                    <h1>{{ 'app.login.title'|trans }}</h1>
                    <p id="beta">beta</p>
{#                    <h2>{{ 'app.login.subtitle'|trans }}</h2>#}
                    <h2>{{ 'app.login.subtext'|trans }}</h2>
                </div>
                <p id="link-register">{{ 'app.login.new'|trans }}<a href="{{ path('fos_user_registration_register') }}" title="{{ 'Sign up here'|trans }}">{{ 'Sign up here'|trans }}</a></p>
            </div>                
        {% endblock %}
    </div>  

    <script type="text/javascript">
        // GOOGLE ANALYTICS
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-79598001-1', 'auto');
        ga('send', 'pageview');
        
        $(document).ready(function(){

            var loginImage1 = "{{ asset('bundles/app/images/login/manager_16.jpg') }}"; 
            var loginImage2 = "{{ asset('bundles/app/images/login/manager_17.jpg') }}"; 
            var loginImage3 = "{{ asset('bundles/app/images/login/manager_25.jpg') }}";
            
            $.backstretch([loginImage1, loginImage2, loginImage3], {duration: 5000, fade: 1000});
        });
    </script>    
</body>
</html>

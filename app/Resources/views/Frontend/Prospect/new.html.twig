{% extends '::base_modal.html.twig' %}
{% block title %}New contact{% endblock %} 

{% block content %}   
    {{ form_start(form, {'attr': {'id':'form-new-prospect'}}) }}   
        {{ form_row(form.nickname) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.age) }}
        {{ form_row(form.city) }}
        {{ form_row(form.parisDistrict) }}
        {{ form_row(form.country) }}
        {{ form_row(form.cellNumber) }}
        {{ form_row(form.homeNumber) }}
        {{ form_row(form.source) }}

        {#{{ form_label(form.photos) }}

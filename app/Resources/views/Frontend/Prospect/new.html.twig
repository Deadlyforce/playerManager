        {{ form_row(form.submit, {'attr': {'class': 'btn-submit-light'}}) }}
        <div class="hidden">{{ form_rest(form) }}</div>
    {{ form_end(form) }} 

    <script type="text/javascript"> 

        $(document).ready(function(){

            getDatepicker();

            $('.form-input-city').change(function(){
                var city = $(this).val().toLowerCase();

                if(city === 'paris'){
                    $('.row_parisDistrict').show('fast');
                }else{
                    $('.row_parisDistrict').hide('fast');
                }
            });        

        });  

    </script>
{% endblock %}


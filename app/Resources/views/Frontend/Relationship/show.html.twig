{% extends '::base.html.twig' %}
{% import ":Frontend/Macros/prospect:photoDisplay250px.html.twig" as photoDisplay %}
{% block title %}Relationship{% endblock %}

{% block content %}
    <div class="container" id="container-relationship">
        <section class="page-title">
            <h1>Relationship with {{ relationship.prospect.firstname }}</h1>
        </section>
        <div class="page-title-underline"></div> 
        
        <div class="row">
            <div class="col-md-3">
                {{ photoDisplay.primaryPhotoOrLast(relationship.prospect.photos) }}
            </div>

            <div class="col-md-9 page-content">
                <table class="table table-responsive" id="table-relationship-show">
                    <tbody>                        
                        <tr>
                            <th>Start Date</th>
                            <td>{% if relationship.startDate %}{{ relationship.startDate|date('d-m-Y') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{% if relationship.status %}On{% else %}Off{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Meeting</th>
                            <td>{% if relationship.meeting %}Oui{% else %}Non{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Meeting count</th>
                            <td>{{ relationship.meetingCount }}</td>
                        </tr>
                        <tr>
                            <th>Kc</th>
                            <td>{% if relationship.kc %}Oui{% else %}Non{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Fc</th>
                            <td>{% if relationship.fc %}Oui{% else %}Non{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ relationship.relationshipRank }}</td>
                        </tr>
                        <tr>
                            <th>Distance</th>
                            <td>{% if relationship.distance %}Oui{% else %}Non{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Flake</th>
                            <td>{% if relationship.flake %}Oui{% else %}Non{% endif %}</td>
                        </tr>
                        <tr>
                            <th>About</th>
                            <td>{{ relationship.about }}</td>
                        </tr>
                    </tbody>
                </table>
                
                <a class="btn-dark" href="{{ path('prospect_show', {"id": relationship.prospect.id}) }}" title="Show contact"><i class="fa fa-user"></i> Show contact</a>             
                <a class="btn-dark" href="{{ path('relationship_edit', { 'id': relationship.id }) }}" title="Edit relationship"><i class="fa fa-edit"></i> Edit relationship</a>
                   
                {{ form(delete_form) }}
                
            </div>
        </div>
    </div>
{% endblock %}

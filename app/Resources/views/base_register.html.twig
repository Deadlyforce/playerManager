<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ 'app.login.title'|trans }}{% endblock %}</title>        
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite' 
                'bundles/app/packages/bootstrap-3.3.6/css/bootstrap.min.css'
                'bundles/app/packages/bootstrap-3.3.6/css/bootstrap-theme.min.css'             
                'bundles/app/css/custom.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}"/>
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        {% block javascripts %}
            {% javascripts
                '%kernel.root_dir%/../vendor/components/jquery/jquery.js'  
                'bundles/app/packages/bootstrap-3.3.6/js/bootstrap.min.js'                                
                'bundles/app/packages/jquery.backstretch.min.js'
            %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </head>

{% extends "::base_login.html.twig" %}

{% block title %}Login{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}
    <form class="form-inline" name="fos_user_security_login" action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

{#            <label for="username">{{ 'security.login.username'|trans }}</label>#}
        <div class="form-group">            
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}"/>
        </div>
{#            <label for="password">{{ 'security.login.password'|trans }}</label>#}
        <div class="form-group">
            <input class="form-control" type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"/>
        </div>
        <div class="form-group">            
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <input class="pull-right" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>
    {% if error %}
        <div class="fos-error-login">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        
{% endblock fos_user_content %}

